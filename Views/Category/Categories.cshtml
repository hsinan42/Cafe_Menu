@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Styles/table_style.css" rel="stylesheet" />

<br />
<h2 class="text-center my-4">Kategori Listesi</h2>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr style="font-size: larger;">
            <th>Kategori Resmi</th>
            <th>Kategori Adı</th>
            <th>Kategori Açıklaması</th>
            <th>Kategori Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="font-weight: 500;">
                <td>
                    @if (!string.IsNullOrEmpty(item.CategoryImage))
                    {
                        <img src="@Url.Content(item.CategoryImage)" alt="@item.CategoryName" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Resim yok</span>
                    }
                </td>
                <td><span class="badge-category-blue">@item.CategoryName</span></td>
                <td>
                    @item.CategoryDescription
                </td>
                <td style="color: @(item.CategoryStatus ? "green" : "red"); font-weight: bold;">
                    <span id="status-@item.CategoryID">
                        @(item.CategoryStatus ? "Aktif" : "Pasif")
                    </span>
                    <br />
                    <button class="btn btn-warning toggle-status action-btn mt-2" data-id="@item.CategoryID">
                        Değiştir
                    </button>
                </td>
                <td>
                    <form action="/Category/CategoryEdit/@item.CategoryID" method="post">
                        <button class="btn btn-primary action-btn">
                            Güncelle
                        </button>
                    </form>
                    <button class="btn btn-danger delete-category action-btn" data-id="@item.CategoryID">
                        Sil
                    </button>
                </td>

            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bu kategoriyi silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Sil</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Kategori durumu değiştirme
        $(".toggle-status").click(function () {
            var categoryId = $(this).data("id");
            var statusSpan = $("#status-" + categoryId);

            $.ajax({
                url: "/Category/ToggleStatus",
                type: "POST",
                data: { id: categoryId },
                success: function (response) {
                    if (response.success) {
                        if (response.newStatus) {
                            statusSpan.text("Aktif").css("color", "green");
                        } else {
                            statusSpan.text("Pasif").css("color", "red");
                        }
                    } else {
                        alert("Durum değiştirilemedi!");
                    }
                },
                error: function () {
                    alert("Bir hata oluştu!");
                }
            });
        });

        // Kategori silme işlemi
        $(".delete-category").click(function () {
            var categoryId = $(this).data("id");

            // Modal'ı aç
            $('#confirmDeleteModal').modal('show');

            // Önceden atanmış click eventlerini temizleyerek yeniden tanımla
            $("#confirmDeleteButton").off("click").on("click", function () {
                $.ajax({
                    url: "/Category/CategoryDelete",
                    type: "POST",
                    data: { id: categoryId },
                    success: function (response) {
                        if (response.success) {
                            // Başarıyla silinmişse, ilgili satırı kaldır
                            $("button[data-id='" + categoryId + "']").closest("tr").fadeOut();
                            $('#confirmDeleteModal').modal('hide');
                        } else {
                            alert("Silme işlemi başarısız oldu!");
                        }
                    },
                    error: function () {
                        alert("Bir hata oluştu!");
                    }
                });
            });
        });
    });

</script>
